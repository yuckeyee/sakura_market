<div class="album py-5 bg-light">
<div class="container">
  <div class="row">
  <div class="card-deck">
  <% @items.each do |item| %>
    <div class="col-md-4">
      <div class="card mb-4 box-shadow">
        <img class="card-img-top" src="http://placehold.jp/100x75.png" alt="Card image cap">
        <div class="card-block">
          <h4 class="card-title"><%= item.name %></h4>
          <p class="card-text"><%= item.description %></p>
        </div>
        <div class="card-footer">
          価格：<%= item.price %>円
          <a href="#" class="btn btn-primary" style="float: right">カートに入れる</a>
        </div>
      </div>
    </div>
    <% end %>
    </div>
    <%= paginate @items %>
</div>
</div>